---
// src/components/ArticleCard.astro
import type { WordPressPost } from "@/lib/types/wordpress";
import Button from "./Button.astro";
import { formatDate } from "@/utils/dates";

interface Props {
  post: WordPressPost;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;

const category = post._embedded?.["wp:term"]?.[0]?.[0];
const featuredMedia = post._embedded?.["wp:featuredmedia"]?.[0];
const author = post._embedded?.author?.[0];

const imageUrl = featuredMedia?.source_url;
---

<article
  class:list={[
    "relative overflow-hidden bg-ui-card-surface text-ui-card-text border-ui-card-border hover:bg-ui-card-hover flex flex-col aspect-[3/4] md:aspect-auto col-span-full md:first-of-type:col-span-4 md:col-span-2 md:row-span-5 md:first-of-type:row-span-4 2xl:row-span-4 2xl:first-of-type:row-span-3 transition-all duration-300",
    featured ? "banner-card" : "article-card",
  ]}
>
  {
    imageUrl && (
      <img
        src={imageUrl}
        alt={featuredMedia?.alt_text || post.title.rendered}
        class:list={[
          "object-cover w-full h-full transition-all duration-300",
          featured
            ? ""
            : "opacity-10 [.article-card:has(button:hover)_&]:scale-105 [.article-card:has(button:hover)_&]:opacity-50",
        ]}
        loading="lazy"
      />
    )
  }

  <div
    class:list={[
      "flex flex-col gap-4 lg:gap-6 px-6 py-12 xl:p-12 absolute bottom-0 w-full",
      featured &&
        "bg-ui-card-surface/90 md:bg-ui-card-surface md:border-t-4 md:border-l-4 md:border-ui-card-border md:w-5/6 lg:w-2/3 right-0",
    ]}
  >
    {
      category?.name && (
        <span class="font-display font-semibold text-base tracking-wide uppercase -mb-5 text-content-meta">
          {category.name}
        </span>
      )
    }

    <h2
      class="font-display font-black text-6xl md:text-4xl xl:text-6xl 3xl:text-7xl leading-[0.8] text-content-heading"
      set:html={post.title.rendered}
    />

    <div
      class="text-sm md:text-base 2xl:text-lg leading-snug line-clamp-2 text-content-body"
      set:html={post.excerpt.rendered}
    />

    <div class="mt-auto flex flex-col gap-4">
      {
        author && (
          <div class="flex items-center text-content-meta">
            {author.avatar_urls?.["96"] && (
              <img
                src={author.avatar_urls["96"]}
                alt={author.name}
                class="w-8 h-8 rounded-full mr-2"
              />
            )}
            <span>{author.name}</span>
            <span class="mx-2">â€¢</span>
            <time datetime={post.date}>{formatDate(post.date)}</time>
          </div>
        )
      }

      <a
        href={`/news/${post.slug}`}
        class="self-start focus:outline-none focus-visible:ring-2 focus-visible:ring-ui-button-ring"
      >
        <Button type="button" variant="primary" size="md"> Read More </Button>
      </a>
    </div>
  </div>
</article>
