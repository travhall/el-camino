---
interface Props {
  title?: string;
  content: string;
}

const { title, content } = Astro.props;
---

<section class="py-12 bg-surface-primary">
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-display-xl font-display text-content-heading mb-6">
        {title}
      </h2>
    )}
    <div class="prose prose-lg prose-content max-w-none">
      {content}
    </div>
  </div>
</section>