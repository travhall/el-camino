---
// src/components/ArticleGrid.astro
import ArticleCard from "./ArticleCard.astro";
import type { Article } from '@/lib/types/strapi';

interface Props {
  articles: Article[];
  featured?: boolean;
}

const { articles, featured = false } = Astro.props;
---

<div class="card-grid grid justify-center grid-cols-6 2xl:grid-cols-8 md:auto-rows-[10vw] w-full gap-1 p-1">
  {articles.map((article, index) => (
    <ArticleCard 
      article={article} 
      featured={featured && index === 0} 
    />
  ))}
</div>