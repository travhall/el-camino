---
// src/components/ArticleGrid.astro
import ArticleCard from "@/components/ArticleCard.astro";
import type { Article } from "@/lib/types/content";

interface Props {
  articles: Article[];
  featured?: boolean; // If true, first article will be featured (larger)
}

const { articles, featured = false } = Astro.props;
---

<div
  class="card-grid grid justify-center grid-cols-6 2xl:grid-cols-8 md:auto-rows-[10vw] max-w-[120rem] mx-auto gap-1 p-1"
>
  {
    articles.map((article, index) => (
      <ArticleCard article={article} featured={featured && index === 0} />
    ))
  }
</div>
