---
import { Icon } from "astro-icon/components";
const currentYear = new Date().getFullYear();
---

<footer
  class="px-4 pt-8 md:p-8 lg:p-12 lg:pb-6 xl:p-16 xl:pb-8 xl:aspect-video items-stretch w-11/12 lg:w-2/3 2xl:w-3/4 bg-beeswax-200 dark:bg-fig-leaf-800 border-4 border-beeswax-100 dark:border-fig-leaf-900"
>
  <div
    class="flex flex-col items-start xl:flex-row xl:justify-between h-full relative"
  >
    <div
      class="footer-logo flex flex-row items-center justify-center border border-fig-leaf-800 dark:border-honey-cream-50 mb-4"
    >
      <Icon
        name="Icon"
        class="w-20 h-auto p-4 text-honey-cream-50 dark:text-fig-leaf-900 bg-fig-leaf-800 dark:bg-honey-cream-50"
      />
      <p class="max-w-[18ch] px-4 leading-5 text-balance">
        100% Skater Owned, 100% Skater Operated
      </p>
    </div>

    <div class="flex flex-col justify-end">
      <address
        class="flex flex-col xl:text-right gap-1 mb-4 uppercase not-italic"
      >
        <span>El Camino Skateboard Shop</span>
        <span class="mb-4">1901 Brackett Ave #1, Eau Claire, WI 54701</span>
        <a
          href="tel:(534)626-1991"
          class="hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >(534) 626-1991</a
        >
        <a
          href="mailto:elcaminoboardshop@gmail.com"
          class="hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >elcaminoboardshop@gmail.com</a
        >
      </address>

      <ul class="inline-flex flex-row xl:self-end gap-2">
        <li>
          <a
            href="https://www.facebook.com/people/El-Camino-Skateshop/61553258934455/"
            target="_blank"
          >
            <Icon
              name="uil:facebook"
              class="w-6 h-auto text-fig-leaf-900 dark:text-honey-cream-50"
            />
          </a>
        </li>
        <li>
          <a
            href="https://www.instagram.com/elcaminoskateshop/"
            target="_blank"
          >
            <Icon
              name="uil:instagram"
              class="w-6 h-auto text-fig-leaf-900 dark:text-honey-cream-50"
            />
          </a>
        </li>
        <li>
          <a href="https://www.youtube.com/watch?v=9wx1kwv_qlc" target="_blank">
            <Icon
              name="uil:youtube"
              class="w-6 h-auto text-fig-leaf-900 dark:text-honey-cream-50"
            />
          </a>
        </li>
      </ul>
    </div>
  </div>

  <div
    class="copyright flex flex-col gap-2 md:flex-row justify-between md:items-end xl:items-center"
  >
    <ul class="flex flex-col xl:flex-row gap-2 xl:gap-4 mb-12 md:mb-0">
      <li class="mb-1">
        <a
          href="/styleguide"
          class="text-sm hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >Exchange / Refund Policy</a
        >
      </li>
      <li class="mb-1">
        <a
          href="/styleguide"
          class="text-sm hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >Shipping Policy</a
        >
      </li>
      <li class="mb-1">
        <a
          href="/styleguide"
          class="text-sm hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >Privacy Policy</a
        >
      </li>
      <li class="mb-1">
        <a
          href="/styleguide"
          class="text-sm hover:underline decoration-double underline-offset-4 decoration-honey-cream-600 dark:decoration-sweet-tea-500 transition-all"
          >Terms of Service</a
        >
      </li>
    </ul>
    <small
      >&copy;{currentYear} El Camino Skateboard Shop, all rights reserved</small
    >
  </div>
</footer>
