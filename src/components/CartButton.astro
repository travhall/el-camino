---
import { Icon } from "astro-icon/components";
import { cart } from "@/lib/cart";
const cartCount = cart.getItemCount();
---

<a href="/cart" class="relative p-2" aria-label="Shopping Cart">
  <Icon
    class="h-5 w-5 m-1"
    name="uil:shopping-cart"
  />
  <span
    id="cart-count"
    class:list={[
      "absolute top-0.5 right-0.5 bg-ui-button-surface text-ui-button-text text-xs rounded-full w-4 h-4 flex items-center justify-center",
      { hidden: cartCount === 0 },
    ]}
  >
    {cartCount}
  </span>
</a>

<script>
  import { cart } from "@/lib/cart";

  function updateCartCount() {
    const countElement = document.getElementById("cart-count");
    if (!countElement) return;

    const count = cart.getItemCount();
    console.log("Updating cart count:", count);

    countElement.textContent = count.toString();
    countElement.classList.toggle("hidden", count === 0);
  }

  window.addEventListener("storage", (e) => {
    if (e.key === "cart") {
      console.log("Cart storage updated");
      cart.forceRefresh();
      updateCartCount();
    }
  });

  window.addEventListener("cartUpdated", () => {
    console.log("Cart update event received");
    updateCartCount();
  });

  document.addEventListener("DOMContentLoaded", () => {
    console.log("Nav: DOM Content Loaded");
    cart.forceRefresh();
    updateCartCount();
  });
</script>
