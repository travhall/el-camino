---
// src/components/wordpress/blocks/WPQuote.astro

interface Props {
  quote: string;
  cite?: string;
  style?: "default" | "large";
}

const { quote, cite, style = "default" } = Astro.props;
---

<blockquote class={`wp-quote-enhanced ${style === "large" ? "is-large" : ""}`}>
  <!-- Quote Content -->
  <div class="quote-content" set:html={quote} />

  <!-- Citation -->
  {
    cite && (
      <footer class="quote-citation">
        <cite>
          ~ <span set:html={cite} />
        </cite>
      </footer>
    )
  }
</blockquote>

<style>
  /* Enhancement-specific styles only - base styles inherited */
  .wp-quote-enhanced {
    position: relative;
    /* All base blockquote styles inherited from .wordpress-content */
  }

  .wp-quote-enhanced.is-large {
    font-size: 1.5rem;
    text-align: center;
    border: none;
    padding-left: 0;
  }

  .quote-icon {
    position: absolute;
    top: -0.5rem;
    left: -0.5rem;
    color: var(--content-emphasis);
    opacity: 0.3;
  }

  .quote-svg {
    width: 2rem;
    height: 2rem;
  }

  .wp-quote-enhanced.is-large .quote-svg {
    width: 3rem;
    height: 3rem;
  }

  .quote-citation {
    margin-top: 1rem;
    font-style: normal;
    font-size: 0.9em;
    color: var(--content-meta);
  }
</style>
