---
// src/components/wordpress/blocks/WPQuote.astro
// Simplified quote component leveraging base .wordpress-content styles

interface Props {
  quote: string;
  cite?: string;
  style?: "default" | "large";
}

const { quote, cite, style = "default" } = Astro.props;
---

<blockquote class={`wp-quote-enhanced ${style === "large" ? "is-large" : ""}`}>
  <!-- Quote Icon -->
  <div class="quote-icon">
    <svg class="quote-svg" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z" />
    </svg>
  </div>

  <!-- Quote Content - Relies on base .wordpress-content blockquote styles -->
  <div class="quote-content" set:html={quote} />

  <!-- Citation -->
  {cite && (
    <footer class="quote-citation">
      <cite>â€” <span set:html={cite} /></cite>
    </footer>
  )}
</blockquote>

<style>
  /* Enhancement-specific styles only - base styles inherited */
  .wp-quote-enhanced {
    position: relative;
    /* All base blockquote styles inherited from .wordpress-content */
  }
  
  .wp-quote-enhanced.is-large {
    font-size: 1.5rem;
    text-align: center;
    border: none;
    padding-left: 0;
  }
  
  .quote-icon {
    position: absolute;
    top: -0.5rem;
    left: -0.5rem;
    color: var(--content-emphasis);
    opacity: 0.3;
  }
  
  .quote-svg {
    width: 2rem;
    height: 2rem;
  }
  
  .wp-quote-enhanced.is-large .quote-svg {
    width: 3rem;
    height: 3rem;
  }
  
  .quote-citation {
    margin-top: 1rem;
    font-style: normal;
    font-size: 0.9em;
    color: var(--content-meta);
  }
</style>
