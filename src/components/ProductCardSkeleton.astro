---
// src/components/ProductCardSkeleton.astro - Match ProductCard Structure
interface Props {
  priority?: boolean;
}

const { priority = false } = Astro.props;
---

<div
  class="group grid grid-rows-[auto_1fr] gap-2 w-full p-1 bg-ui-card-surface text-ui-card-text border-2 border-ui-card-border"
  role="status"
  aria-label="Loading product"
>
  <!-- Image skeleton matching ProductCard aspect ratios -->
  <div class="relative aspect-video sm:aspect-square overflow-hidden">
    <div class="w-full h-full bg-surface-tertiary animate-pulse"></div>
  </div>

  <!-- Content skeleton matching ProductCard structure -->
  <div class="grid px-1">
    <div class="self-start space-y-1">
      <!-- Brand skeleton (optional, small) -->
      <div class="h-3 bg-surface-tertiary rounded w-16 animate-pulse"></div>

      <!-- Title skeleton (matches ProductCard) -->
      <div class="space-y-1 mb-1">
        <div class="h-4 bg-surface-tertiary rounded animate-pulse"></div>
        <div class="h-4 bg-surface-tertiary rounded w-3/4 animate-pulse"></div>
      </div>
    </div>

    <!-- Price skeleton (matches ProductCard) -->
    <div class="self-end">
      <div class="h-6 bg-surface-tertiary rounded w-20 animate-pulse"></div>
    </div>
  </div>
</div>
