<script>
  class BusinessImpactController {
    private updateInterval: NodeJS.Timeout | null = null;

    constructor() {
      this.init();
    }

    private init(): void {
      this.initCharts();
      this.setupEventListeners();
      this.setupROICalculator();
      this.startPeriodicUpdates();
    }

    private setupEventListeners(): void {
      document
        .getElementById("summary-period")
        ?.addEventListener("change", () => {
          this.updateSummaryPeriod();
        });

      document.addEventListener("admin:refresh", () => {
        this.updateBusinessMetrics();
      });
    }

    private setupROICalculator(): void {
      const lcpSlider = document.getElementById(
        "lcp-improvement"
      ) as HTMLInputElement;
      const lcpValue = document.getElementById("lcp-value");
      const calculateBtn = document.getElementById("calculate-roi");

      // Update slider value display
      lcpSlider?.addEventListener("input", () => {
        if (lcpValue) {
          lcpValue.textContent = `${lcpSlider.value}ms`;
        }
      });

      // Calculate ROI on button click
      calculateBtn?.addEventListener("click", () => {
        this.calculateROI();
      });

      // Auto-calculate on input changes
      ["monthly-traffic", "conversion-rate", "avg-order-value"].forEach(
        (id) => {
          document.getElementById(id)?.addEventListener("input", () => {
            this.calculateROI();
          });
        }
      );

      // Initial calculation
      this.calculateROI();
    }

    private calculateROI(): void {
      const lcpImprovement = parseInt(
        (document.getElementById("lcp-improvement") as HTMLInputElement)
          ?.value || "300"
      );
      const monthlyTraffic = parseInt(
        (document.getElementById("monthly-traffic") as HTMLInputElement)
          ?.value || "25000"
      );
      const conversionRate = parseFloat(
        (document.getElementById("conversion-rate") as HTMLInputElement)
          ?.value || "3.2"
      );
      const avgOrderValue = parseFloat(
        (document.getElementById("avg-order-value") as HTMLInputElement)
          ?.value || "127"
      );

      // Calculate conversion rate improvement based on LCP improvement
      // Assumption: 100ms LCP improvement = 0.2% conversion rate increase
      const conversionImprovement = (lcpImprovement / 100) * 0.002;
      const newConversionRate = conversionRate + conversionImprovement;

      // Calculate revenue impact
      const currentMonthlyRevenue =
        monthlyTraffic * (conversionRate / 100) * avgOrderValue;
      const newMonthlyRevenue =
        monthlyTraffic * (newConversionRate / 100) * avgOrderValue;
      const monthlyIncrease = newMonthlyRevenue - currentMonthlyRevenue;
      const annualIncrease = monthlyIncrease * 12;

      // Calculate ROI (assuming $25K optimization cost)
      const optimizationCost = 25000;
      const roi =
        ((annualIncrease - optimizationCost) / optimizationCost) * 100;
      const paybackPeriod = optimizationCost / monthlyIncrease;

      // Update display
      this.updateROIDisplay({
        monthlyIncrease,
        annualIncrease,
        roi,
        paybackPeriod,
      });
    }

    private updateROIDisplay(results: any): void {
      const elements = {
        "revenue-increase": `$${results.monthlyIncrease.toLocaleString(undefined, { maximumFractionDigits: 0 })}`,
        "annual-impact": `$${results.annualIncrease.toLocaleString(undefined, { maximumFractionDigits: 0 })}`,
        "roi-percentage": `${Math.round(results.roi)}%`,
        "payback-period": `${results.paybackPeriod.toFixed(1)}`,
      };

      Object.entries(elements).forEach(([id, value]) => {
        const element = document.getElementById(id);
        if (element) {
          element.textContent = value;
        }
      });
    }

    private initCharts(): void {
      this.initLCPConversionChart();
      this.initINPBounceChart();
      this.initRevenuePerformanceChart();
    }

    private initLCPConversionChart(): void {
      const canvas = document.getElementById(
        "lcp-conversion-chart"
      ) as HTMLCanvasElement;
      if (!canvas) return;

      const ctx = canvas.getContext("2d");
      if (!ctx) return;

      // Simple scatter plot showing LCP vs Conversion Rate correlation
      this.drawScatterPlot(
        ctx,
        canvas,
        "LCP (seconds)",
        "Conversion Rate (%)",
        [
          { x: 1.2, y: 4.8 },
          { x: 1.8, y: 4.2 },
          { x: 2.1, y: 3.8 },
          { x: 2.7, y: 3.2 },
          { x: 3.4, y: 2.6 },
          { x: 4.1, y: 2.1 },
          { x: 4.8, y: 1.7 },
        ]
      );
    }

    private initINPBounceChart(): void {
      const canvas = document.getElementById(
        "inp-bounce-chart"
      ) as HTMLCanvasElement;
      if (!canvas) return;

      const ctx = canvas.getContext("2d");
      if (!ctx) return;

      // Simple scatter plot showing INP vs Bounce Rate correlation
      this.drawScatterPlot(ctx, canvas, "INP (ms)", "Bounce Rate (%)", [
        { x: 80, y: 25 },
        { x: 120, y: 28 },
        { x: 147, y: 34 },
        { x: 180, y: 38 },
        { x: 220, y: 43 },
        { x: 280, y: 48 },
        { x: 350, y: 55 },
      ]);
    }

    private initRevenuePerformanceChart(): void {
      const canvas = document.getElementById(
        "revenue-performance-chart"
      ) as HTMLCanvasElement;
      if (!canvas) return;

      const ctx = canvas.getContext("2d");
      if (!ctx) return;

      // Bar chart showing revenue by performance segment
      this.drawBarChart(
        ctx,
        canvas,
        ["Fast", "Moderate", "Slow"],
        [48200, 28700, 12100],
        ["#10b981", "#f59e0b", "#ef4444"]
      );
    }

    private drawScatterPlot(
      ctx: CanvasRenderingContext2D,
      canvas: HTMLCanvasElement,
      xLabel: string,
      yLabel: string,
      data: any[]
    ): void {
      const rect = canvas.getBoundingClientRect();
      const dpr = window.devicePixelRatio || 1;

      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      ctx.scale(dpr, dpr);

      const padding = 50;
      const chartWidth = rect.width - 2 * padding;
      const chartHeight = rect.height - 2 * padding;

      // Clear canvas
      ctx.clearRect(0, 0, rect.width, rect.height);

      // Draw axes
      ctx.strokeStyle = "#e5e7eb";
      ctx.lineWidth = 1;
      ctx.beginPath();
      ctx.moveTo(padding, padding);
      ctx.lineTo(padding, rect.height - padding);
      ctx.lineTo(rect.width - padding, rect.height - padding);
      ctx.stroke();

      // Draw data points
      ctx.fillStyle = "#3b82f6";
      data.forEach((point) => {
        const x =
          padding + (point.x / Math.max(...data.map((d) => d.x))) * chartWidth;
        const y =
          rect.height -
          padding -
          (point.y / Math.max(...data.map((d) => d.y))) * chartHeight;

        ctx.beginPath();
        ctx.arc(x, y, 4, 0, 2 * Math.PI);
        ctx.fill();
      });

      // Draw trend line
      ctx.strokeStyle = "#3b82f6";
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(padding, rect.height - padding - 20);
      ctx.lineTo(rect.width - padding, padding + 20);
      ctx.stroke();
    }

    private drawBarChart(
      ctx: CanvasRenderingContext2D,
      canvas: HTMLCanvasElement,
      labels: string[],
      values: number[],
      colors: string[]
    ): void {
      const rect = canvas.getBoundingClientRect();
      const dpr = window.devicePixelRatio || 1;

      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      ctx.scale(dpr, dpr);

      const padding = 50;
      const chartWidth = rect.width - 2 * padding;
      const chartHeight = rect.height - 2 * padding;
      const barWidth = (chartWidth / values.length) * 0.6;
      const barSpacing = (chartWidth / values.length) * 0.4;
      const maxValue = Math.max(...values);

      // Clear canvas
      ctx.clearRect(0, 0, rect.width, rect.height);

      // Draw bars
      values.forEach((value, index) => {
        const barHeight = (value / maxValue) * chartHeight;
        const x = padding + index * (barWidth + barSpacing) + barSpacing / 2;
        const y = rect.height - padding - barHeight;

        ctx.fillStyle = colors[index];
        ctx.fillRect(x, y, barWidth, barHeight);

        // Add value labels
        ctx.fillStyle = "#374151";
        ctx.font = "12px sans-serif";
        ctx.textAlign = "center";
        ctx.fillText(`$${(value / 1000).toFixed(1)}K`, x + barWidth / 2, y - 5);
      });
    }

