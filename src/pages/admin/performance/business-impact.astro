    }

    private updateBusinessMetrics(): void {
      // Simulate real-time business metrics updates
      console.log("Updating business metrics...");
    }

    private startPeriodicUpdates(): void {
      this.updateInterval = setInterval(
        () => {
          this.updateBusinessMetrics();
        },
        5 * 60 * 1000
      ); // Update every 5 minutes
    }

    public destroy(): void {
      if (this.updateInterval) {
        clearInterval(this.updateInterval);
      }
    }
  }

  // Initialize controller
  let businessController: BusinessImpactController;

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      businessController = new BusinessImpactController();
    });
  } else {
    businessController = new BusinessImpactController();
  }

  // Cleanup
  window.addEventListener("beforeunload", () => {
    if (businessController) {
      businessController.destroy();
    }
  });
</script>
