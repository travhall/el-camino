---
// src/pages/news/[slug].astro - Using WordPress Block Parser
import Layout from "@/layouts/Layout.astro";
import { getPost, getPosts } from "@/lib/wordpress/api";
import { formatDate } from "@/utils/dates";
import type { WordPressPost } from "@/lib/wordpress/types";
import { extractEmbeddedData } from "@/lib/wordpress/types";
import Tag from "@/components/Tag.astro";
import WordPressBlockParser from "@/components/wordpress/WordPressBlockParser.astro";
import { EnhancedImageOptimizer } from "@/lib/image/enhanced-optimizer";
import {
  EL_CAMINO_LOADER_DATA_URI,
  EL_CAMINO_LOGO_DATA_URI,
} from "@/lib/constants/assets";

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;

if (!slug) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

let post: WordPressPost | null = null;
let error: string | null = null;

try {
  post = await getPost(slug);
  if (!post) {
    return new Response(null, {
      status: 404,
      statusText: "Post not found",
    });
  }
} catch (e) {
  error = e instanceof Error ? e.message : "An error occurred loading the post";
  return new Response(error, { status: 500 });
}

let prevPost: WordPressPost | null = null;
let nextPost: WordPressPost | null = null;
let prevPostFeaturedImage: string | null = null;
let nextPostFeaturedImage: string | null = null;

if (post) {
  try {
    const allPosts = await getPosts();
    const currentIndex = allPosts.findIndex((p) => p.slug === post.slug);

    if (currentIndex > 0) {
      nextPost = allPosts[currentIndex - 1];
      const nextEmbeddedData = extractEmbeddedData(nextPost);
      nextPostFeaturedImage =
        nextEmbeddedData.featuredMedia?.source_url || null;
    }

    if (currentIndex < allPosts.length - 1) {
      prevPost = allPosts[currentIndex + 1];
      const prevEmbeddedData = extractEmbeddedData(prevPost);
      prevPostFeaturedImage =
        prevEmbeddedData.featuredMedia?.source_url || null;
    }
  } catch (e) {
    // console.warn("Could not load navigation posts:", e);
  }
}

const embeddedData = extractEmbeddedData(post);
const category = embeddedData.category;
const featuredMedia = embeddedData.featuredMedia;
const author = embeddedData.author;
const tags = embeddedData.tags;

// PHASE 4 TRACK B: Optimize hero image through Netlify CDN
// Reduces quality to 75 and explicitly requests AVIF for -400ms to -700ms LCP improvement
// CLS FIX: Use actual image dimensions from WordPress to prevent layout shift
const rawImageUrl = featuredMedia?.source_url;
const heroImageWidth = featuredMedia?.media_details?.width || 1200;
const heroImageHeight = featuredMedia?.media_details?.height || 675;
const heroAspectRatio = heroImageWidth / heroImageHeight;

// Generate optimized image sources using Pattern A (single call)
const imageSet = rawImageUrl
  ? EnhancedImageOptimizer.generateOptimizedSources(rawImageUrl, {
      width: heroImageWidth,
      height: heroImageHeight,
      quality: 75, // Aggressive compression for hero image
      priority: true,
    })
  : null;

const pageTitle = post.title.rendered;
const fullTitle = `${pageTitle} | El Camino`;

// Enhanced structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: pageTitle,
  image: imageSet ? imageSet.avif || imageSet.webp || imageSet.jpeg : undefined,
  author: {
    "@type": "Person",
    name: author?.name || "El Camino",
  },
  publisher: {
    "@type": "Organization",
    name: "El Camino Skate Shop",
    logo: {
      "@type": "ImageObject",
      url: `${Astro.site}logo.png`,
    },
  },
  datePublished: post.date,
  dateModified: post.date,
  articleSection: category?.name,
  description: post.excerpt.rendered.replace(/<[^>]*>/g, "").substring(0, 160),
  keywords: tags.length > 0 ? tags.map((tag) => tag.name) : undefined,
};
---

<Layout title={fullTitle}>
  <!-- PHASE 4: Enhanced Resource Hints for WordPress CDN -->
  <!-- DNS Prefetch for early domain resolution -->
  <link rel="dns-prefetch" href="https://i0.wp.com" slot="head" />
  <link rel="dns-prefetch" href="https://i1.wp.com" slot="head" />
  <link rel="dns-prefetch" href="https://i2.wp.com" slot="head" />

  <!-- Preconnect with crossorigin for image CDN (includes TLS handshake) -->
  <link rel="preconnect" href="https://i0.wp.com" slot="head" crossorigin />
  <link rel="preconnect" href="https://i1.wp.com" slot="head" crossorigin />

  <!-- Gravatar for author avatars -->
  <link rel="dns-prefetch" href="https://secure.gravatar.com" slot="head" />
  <link
    rel="preconnect"
    href="https://secure.gravatar.com"
    slot="head"
    crossorigin
  />

  <!-- PHASE 4: Preload LCP Image with explicit format hint -->
  <!-- This triggers earlier fetch and format negotiation -->
  {
    imageSet && (
      <link
        rel="preload"
        as="image"
        href={imageSet.avif || imageSet.webp || imageSet.jpeg}
        fetchpriority="high"
        type="image/avif"
        slot="head"
      />
    )
  }

  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(structuredData)}
  />

  <article class="p-1 pb-0 flex flex-col gap-1">
    <header
      class="flex flex-col lg:flex-row-reverse items-start lg:items-center gap-4 bg-(--surface-primary)"
    >
      <div class="basis-1/3 2xl:basis-2/5 p-4 mt-8">
        {
          category?.name && (
            <span class="font-display font-semibold text-sm lg:text-lg tracking-wide uppercase text-(--ui-button-text) bg-(--ui-button-surface) px-2 py-0.5 mb-4 inline-block self-start">
              {category.name}
            </span>
          )
        }

        <h1
          class="font-display font-black text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl leading-[0.8] text-(--content-heading) text-balance mb-8"
          set:html={post.title.rendered}
        />

        {
          author && (
            <div class="flex items-center gap-4 text-(--content-meta) mb-6">
              {author.avatar_urls?.["96"] && (
                <div class="relative w-12 h-12">
                  {/* Avatar loading placeholder */}
                  <div
                    class="loading-skeleton absolute inset-0 rounded-full"
                    id="author-avatar-placeholder"
                    aria-hidden="true"
                  >
                    {/* El Camino logo as loading indicator */}
                    <div
                      class="absolute inset-0 flex items-center justify-center rounded-full opacity-70"
                      style={`background-image: url('${EL_CAMINO_LOADER_DATA_URI}'); background-size: 16px 14px; background-position: center; background-repeat: no-repeat;`}
                    />
                  </div>

                  {/* Optimized avatar image */}
                  <img
                    src={author.avatar_urls["96"]}
                    alt={author.name}
                    width="96"
                    height="96"
                    class="w-12 h-12 rounded-full opacity-0 transition-opacity duration-300"
                    loading="lazy"
                    onload="this.style.opacity='0.9'; document.getElementById('author-avatar-placeholder')?.remove();"
                    onerror={`this.src='${EL_CAMINO_LOGO_DATA_URI}'; this.style.opacity='1'; document.getElementById('author-avatar-placeholder')?.remove();`}
                  />
                </div>
              )}
              <div>
                <span class="font-medium text-(--content-body) block">
                  {author.name}
                </span>
                <time datetime={post.date} class="text-sm">
                  {formatDate(post.date)}
                </time>
              </div>
            </div>
          )
        }
      </div>

      <div
        class="border-4 border-(--surface-secondary) overflow-hidden bg-(--surface-secondary) relative basis-2/3 2xl:basis-3/5 self-center w-full h-full"
        style={`aspect-ratio: ${heroAspectRatio}`}
      >
        {/* Hero image loading placeholder - sibling to picture element */}
        {
          imageSet && (
            <div
              class="loading-skeleton loading-image absolute inset-0 w-full h-full"
              id="article-hero-placeholder"
              aria-hidden="true"
            >
              {/* El Camino logo as loading indicator */}
              <div
                class="absolute inset-0 flex items-center justify-center h-full"
                style={`background-image: url('${EL_CAMINO_LOADER_DATA_URI}'); background-size: 48px 42px; background-position: center; background-repeat: no-repeat; opacity: 0.7;`}
              />
            </div>
          )
        }

        {/* Pattern A: Picture element with AVIF/WebP/JPEG */}
        {
          imageSet ? (
            <picture>
              {/* AVIF format (best compression) */}
              {imageSet.avif && (
                <source
                  type="image/avif"
                  srcset={EnhancedImageOptimizer.generateResponsiveSrcSet(
                    rawImageUrl!,
                    "avif",
                    {
                      width: heroImageWidth,
                      height: heroImageHeight,
                      quality: 75,
                    }
                  )}
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 66vw, 1200px"
                />
              )}

              {/* WebP format (good compression) */}
              {imageSet.webp && (
                <source
                  type="image/webp"
                  srcset={EnhancedImageOptimizer.generateResponsiveSrcSet(
                    rawImageUrl!,
                    "webp",
                    {
                      width: heroImageWidth,
                      height: heroImageHeight,
                      quality: 75,
                    }
                  )}
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 66vw, 1200px"
                />
              )}

              {/* JPEG fallback */}
              <img
                src={imageSet.jpeg}
                srcset={EnhancedImageOptimizer.generateResponsiveSrcSet(
                  rawImageUrl!,
                  "jpeg",
                  {
                    width: heroImageWidth,
                    height: heroImageHeight,
                    quality: 75,
                  }
                )}
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 66vw, 1200px"
                alt={featuredMedia?.alt_text || post.title.rendered}
                width={heroImageWidth}
                height={heroImageHeight}
                style={`aspect-ratio: ${heroAspectRatio}`}
                class="w-full h-full object-cover opacity-0 transition-opacity duration-300"
                loading="eager"
                fetchpriority="high"
                onload="this.style.opacity='0.9'; document.getElementById('article-hero-placeholder')?.remove();"
                onerror={`this.src='${EL_CAMINO_LOGO_DATA_URI}'; this.style.opacity='1'; document.getElementById('article-hero-placeholder')?.remove();`}
              />
            </picture>
          ) : null
        }
      </div>
    </header>

    <!-- UPDATED: Enhanced WordPress content with block parsing -->
    <section class="bg-(--surface-secondary)">
      <div
        class="w-full md:max-w-3xl lg:max-w-4xl xl:max-w-5xl mx-auto p-4 lg:p-8 xl:p-12 2xl:p-20"
      >
        <!-- WordPress content with enhanced block rendering -->
        <WordPressBlockParser
          content={post.content.rendered}
          enhanceBlocks={true}
        />
      </div>
    </section>
  </article>

  <!-- Article footer -->
  <footer>
    <div
      class="flex px-4 pb-6 lg:p-8 lg:pt-0 justify-between items-end-safe bg-(--surface-secondary) border-4 border-t-0 border-(--border-secondary)"
    >
      <!-- Article Tags Section -->
      {
        tags.length > 0 && (
          <div class="tags-section">
            <h3 class="text-(--content-meta) text-sm font-medium tracking-wide mb-4">
              Tagged
            </h3>
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <Tag tag={tag} variant="default" size="sm" clickable={true} />
              ))}
            </div>
          </div>
        )
      }

      <button
        class="px-2.5 py-1.5 text-sm border rounded-sm bg-(--surface-primary)/50 hover:bg-(--surface-tertiary) transition-colors text-(--ui-input-text) border-(--ui-input-border)/50"
        id="share-article-button"
      >
        Share Article
      </button>
    </div>

    <!-- Article Navigation -->
    {
      (prevPost || nextPost) && (
        <nav aria-label="Article navigation">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
            <div class="flex justify-start">
              {prevPost && (
                <a
                  href={`/news/${prevPost.slug}`}
                  class="group relative flex flex-col w-full p-8 lg:p-12 bg-(--surface-secondary) hover:bg-(--surface-tertiary) transition-all duration-200"
                  style={
                    prevPostFeaturedImage
                      ? `background-image: url('${prevPostFeaturedImage}'); background-size: cover; background-position: center;`
                      : ""
                  }
                >
                  <span class="text-(--content-meta) text-sm font-medium mb-1 flex items-center z-10">
                    <svg
                      class="w-4 h-4 mr-2 group-hover:mr-0 transition-all"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"
                      />
                    </svg>
                    Previous Article
                  </span>
                  <h3 class="text-(--content-heading) font-display group-hover:mix-blend-multiply dark:group-hover:mix-blend-screen group-hover:font-black font-semibold text-5xl lg:text-6xl leading-none group-hover:text-(--content-emphasis) transition-all duration-300 line-clamp-2 z-10">
                    {prevPost.title.rendered}
                  </h3>
                  <div class="absolute bg-(--surface-secondary)/95 group-hover:bg-(--surface-secondary)/80 top-0 left-0 h-full w-full z-0 transition-all duration-500" />
                </a>
              )}
            </div>

            <div class="flex justify-end">
              {nextPost && (
                <a
                  href={`/news/${nextPost.slug}`}
                  class="group relative flex flex-col w-full p-8 lg:p-12 bg-(--surface-secondary) hover:bg-(--surface-tertiary) transition-all duration-200 text-right"
                  style={
                    nextPostFeaturedImage
                      ? `background-image: url('${nextPostFeaturedImage}'); background-size: cover; background-position: center;`
                      : ""
                  }
                >
                  <span class="text-(--content-meta) text-sm font-medium mb-1 flex items-center justify-end z-10">
                    Next Article
                    <svg
                      class="w-4 h-4 ml-2 group-hover:ml-0 transition-all"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </span>
                  <h3 class="text-(--content-heading) font-display group-hover:mix-blend-multiply dark:group-hover:mix-blend-screen group-hover:font-black font-semibold text-5xl lg:text-6xl leading-none group-hover:text-(--content-emphasis) transition-all duration-300 line-clamp-2 z-10">
                    {nextPost.title.rendered}
                  </h3>
                  <div class="absolute bg-(--surface-secondary)/95 group-hover:bg-(--surface-secondary)/80 top-0 left-0 h-full w-full z-0 transition-all duration-500" />
                </a>
              )}
            </div>
          </div>
        </nav>
      )
    }
  </footer>
</Layout>

<script>
  // Enhanced sharing functionality
  document.addEventListener("astro:page-load", () => {
    const shareButton = document.getElementById("share-article-button");

    if (shareButton) {
      shareButton.addEventListener("click", async (e) => {
        e.preventDefault();

        try {
          const shareData = {
            title: document.title,
            url: window.location.href,
            text:
              document
                .querySelector('meta[name="description"]')
                ?.getAttribute("content") || "",
          };

          if (
            navigator.share &&
            navigator.canShare &&
            navigator.canShare(shareData)
          ) {
            await navigator.share(shareData);

            // Analytics for successful share
            if (typeof window !== "undefined" && (window as any).gtag) {
              (window as any).gtag("event", "article_shared", {
                method: "native_share",
                article_title: document.title,
              });
            }
          } else {
            // Fallback to clipboard
            await navigator.clipboard.writeText(window.location.href);

            // Show feedback
            const originalText = shareButton.textContent;
            shareButton.textContent = "Link Copied!";
            shareButton.classList.add("text-(--ui-accent)");

            setTimeout(() => {
              shareButton.textContent = originalText;
              shareButton.classList.remove("text-(--ui-accent)");
            }, 2000);

            // Analytics for clipboard copy
            if (typeof window !== "undefined" && (window as any).gtag) {
              (window as any).gtag("event", "article_shared", {
                method: "clipboard",
                article_title: document.title,
              });
            }
          }
        } catch (error) {
          // console.warn("Sharing failed:", error);

          // Fallback feedback
          const originalText = shareButton.textContent;
          shareButton.textContent = "Share Failed";
          shareButton.classList.add("text-(--state-error-text)");

          setTimeout(() => {
            shareButton.textContent = originalText;
            shareButton.classList.remove("text-(--state-error-text)");
          }, 2000);
        }
      });
    }
  });
</script>
