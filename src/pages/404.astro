---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Uh oh, that page doesn't exist, sorry | El Camino">
  <div class="w-full max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-display text-content-heading mb-4">
      Page Not Found
    </h1>
    <p class="text-content-body mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a href="/" class="text-content-emphasis hover:underline">Return Home</a>
  </div>
</Layout>
