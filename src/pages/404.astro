---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Uh oh, that page doesn't exist, sorry | El Camino">
  <section class="p-4">
    <h1
      class="font-display font-black text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl leading-[0.8] text-(--content-heading) mb-4"
    >
      Page Not Found
    </h1>
    <p class="text-(--content-body) mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="relative font-semibold text-(--content-body) hover:text-(--content-emphasis) hover:underline underline-offset-0 hover:underline-offset-4 transition-all"
      >Return Home</a
    >
  </section>
</Layout>
