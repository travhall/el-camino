---
import { SEOMetadata } from "astro-seo-metadata";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/globals.css";
import CartDebug from "@/components/CartDebug.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="/" crossorigin />
    <title>{title}</title>

    <script async src="https://sandbox.web.squarecdn.com/v1/square.js"></script>

    <SEOMetadata
      siteName={"El Camino Skate Shop"}
      title={"El Camino Skate Shop"}
      description={"El Camino Skate Shop is a skater owned and operated skateboard shop, located in Eau Claire, WI"}
      image={"http://example.com/the_image_url-preferably_absolute.jpg"}
      favicon={"/favicon.svg"}
      author="Travis Hall"
      copyright="ISC"
      astroSitemap={true}
      canonicalUrl={Astro.url.toString()}
      type={"website"}
      astroGenerator={true}
    />
  </head>
  <body
    class="bg-surface-primary text-content-body grid grid-rows-[auto_1fr_auto] min-h-screen"
  >
    <Header />
    <main class="bg-surface-primary text-content-body z-10 relative">
      <slot />
    </main>
    <Footer />
    <CartDebug />
  </body>
</html>
