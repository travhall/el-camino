{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "src/lib"],
    "types": ["astro/client"],
    "jsx": "preserve",
    "jsxImportSource": "astro"
  },
  "include": ["src/**/*", "src/types/**/*", "**/*.astro"]
}
