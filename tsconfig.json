{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "src/lib"],
    "types": ["astro/client"],
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
        "astroWorkspaceRoot": "."
      }
    ]
  },
  "include": [".astro/types.d.ts", "src/**/*", "src/types/**/*", "**/*.astro"]
}
